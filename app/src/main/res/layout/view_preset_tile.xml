<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/preset_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@color/material_blue_grey_800"
        android:background="@color/background_material_light"
        android:contentDescription="@string/description_preset_fragment_img"/>

    <TextView
        android:id="@+id/preset_title"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="@string/dummy_text_preset_fragment"
        android:gravity="center"
        android:background="@color/background_material_light"
        style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Small"/>

</merge>