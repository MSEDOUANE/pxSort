<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/tune_sorter_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tune_black_24dp"
        android:contentDescription="@string/tune_sorter_button_description"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:background="@android:color/holo_blue_light"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?metaButtonBarStyle"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@android:color/holo_purple"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/sort_layout">

            <Button
                android:id="@+id/asendorf_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/sort_row"
                android:drawableTop="@drawable/ic_photo_black_24dp"
                android:paddingTop="30dp"
                android:drawablePadding="-20dp" />

        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>